{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": [
		"main"
	],
	"permissions": [
		"core:default",
		"dialog:default",
		{
			"identifier": "fs:read-all",
			"allow": [
				{
					"path": "**/*"
				}
			]
		},
		{
			"identifier": "fs:write-all",
			"allow": [
				{
					"path": "**/*"
				}
			]
		},
		{
			"identifier": "opener:allow-reveal-item-in-dir",
			"allow": [
				{
					"path": "**/*"
				}
			]
		},
		{
			"identifier": "opener:allow-open-url",
			"allow": [
				{
					"url": "https://*"
				}
			]
		}
	]
}
